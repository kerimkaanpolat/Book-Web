@model IEnumerable<Book_Web.Models.CartItem>

<h2>Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price
            </th>
            <th>Quantity</th>
            <th>Actions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.Book.Author</td>
                <td>@item.Book.Price</td>
                <td>@item.Quantity</td>
                <td>
                    <form asp-action="RemoveFromCart" method="post">
                <input type="hidden" name="id" value="@item.Id" />
                <button type="submit" class="btn btn-danger">Remove</button>
            </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Checkout" asp-controller="Orders" class="btn btn-success">Checkout</a>
